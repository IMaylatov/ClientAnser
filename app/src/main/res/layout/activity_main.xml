<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:clickable="false"
    android:transitionGroup="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Anser"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Логин"
        android:id="@+id/txtLogin"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editLogin"
        android:layout_below="@+id/txtLogin"
        android:layout_alignLeft="@+id/txtLogin"
        android:layout_alignStart="@+id/txtLogin"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="alisa@gmail.com"
        style="@style/App_EditTextStyle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Пароль"
        android:id="@+id/textPassword"
        android:layout_below="@+id/editLogin"
        android:layout_alignLeft="@+id/editLogin"
        android:layout_alignStart="@+id/editLogin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPassword"
        android:layout_below="@+id/textPassword"
        android:layout_alignLeft="@+id/textPassword"
        android:layout_alignStart="@+id/textPassword"
        android:layout_alignRight="@+id/editLogin"
        android:layout_alignEnd="@+id/editLogin"
        android:text="123"
        style="@style/App_EditTextStyle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Войти"
        android:id="@+id/btnEnter"
        android:onClick="onEnterClick"
        android:layout_below="@+id/editPassword"
        android:layout_alignLeft="@+id/editPassword"
        android:layout_marginLeft="50dp"
        android:layout_alignStart="@+id/editPassword"
        android:layout_alignRight="@+id/editPassword"
        android:layout_marginRight="50dp"
        android:layout_alignEnd="@+id/editPassword"
        style="@style/App_ButtonStyle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        android:id="@+id/btnRefister"
        android:onClick="onGoToRegisterClick"
        android:layout_below="@+id/btnEnter"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/btnEnter"
        android:layout_alignStart="@+id/btnEnter"
        android:layout_alignRight="@+id/btnEnter"
        android:layout_alignEnd="@+id/btnEnter"
        style="@style/App_ButtonStyle"/>

</RelativeLayout>
