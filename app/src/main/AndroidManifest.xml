<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="recommend.imaylatov.com.client" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".web.Activity.LoginActivity.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".web.Activity.RegistrationActivity.RegistrationActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".web.Activity.MainActivity.MainActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".web.Activity.SearchActivity.Search.SearchActivity"/>

        <activity android:name=".web.Activity.SearchActivity.Genre.GenreActivity"/>

        <activity android:name=".web.Activity.SearchActivity.Author.AuthorActivity"/>

        <activity android:name=".web.Activity.SearchActivity.MyMusic.MyMusicActivity"/>

        <service android:name=".web.Player.PlayerService" android:enabled="true"></service>
    </application>

</manifest>
